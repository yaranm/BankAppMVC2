@model BankAppMVC2.ViewModels.UttagViewModel
@{
    ViewData["Title"] = "Uttag";
}

<section class="py-5">
    <div class="row">
        <div class="col-lg-12 mb-5">
            <div class="card">
                <div class="card-header">
                    <h3 class="h6 text-uppercase mb-0">Uttag</h3>
                </div>

                <div class="card-body">
                    <form asp-controller="Uttag" asp-action="NewUttag" method="post">
                        <div class="form-group">
                            <label asp-for="AccountId">Kontonummer:</label>
                            <input class="form-control" asp-for="AccountId">
                            <span asp-validation-for="AccountId" class="field-validation-error"></span>
                            
                        </div>
                        <div class="form-group">
                            <label asp-for="Amount">Ange belopp att ta ut:</label>
                            <input class="form-control" asp-for="Amount">
                            <span asp-validation-for="Amount" class="field-validation-error"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Plocka ut</button>
                    </form>
                </div>

            </div>

        </div>
    </div>
</section>