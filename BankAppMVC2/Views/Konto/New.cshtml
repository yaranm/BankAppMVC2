@model BankAppMVC2.ViewModels.NewKontoViewModel

@{
    ViewData["Title"] = "Skapa bank-konto";
}

<section class="py-5">
    <div class="row">
        <div class="col-lg-12 mb-5">
            <div class="card">
                <div class="card-header">
                    <h3 class="h6 text-uppercase mb-0">Skapa ett bank konto</h3>
                </div>

                <div class="card-body">
                    <form asp-controller="Konto" asp-action="New" method="post">
                        <div class="form-group">
                            <label asp-for="Balance">Belopp kunden har: </label>
                            <input class="form-control" asp-for="Balance">
                            <span asp-validation-for="Balance" class="field-validation-error"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Created">Start datum för kontot: </label>
                            <input class="form-control" asp-for="Created">
                            <span asp-validation-for="Created" class="field-validation-error"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Frequency">Frekvens: </label>
                            <input class="form-control" asp-for="Frequency">
                            <span asp-validation-for="Frequency" class="field-validation-error"></span>
                        </div>

                        <button type="submit" class="btn btn-primary">Skapa</button>
                    </form>
                </div>

            </div>

        </div>
    </div>
</section> 